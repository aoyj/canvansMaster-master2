<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aoyj.learn.canvas_master.MainActivity">

    <Button
        android:id="@+id/base_graph_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="base graph"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/draw_txt_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/draw_txt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="draw_txt"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/canvas_operation_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_graph_btn" />

    <Button
        android:id="@+id/canvas_operation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="canvas_operation"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/test_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/draw_txt_btn" />

    <Button
        android:id="@+id/test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/path_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/canvas_operation_btn" />

    <Button
        android:id="@+id/path_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="path"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/paint_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_btn" />

    <Button
        android:id="@+id/paint_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paint"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/path_btn" />

</android.support.constraint.ConstraintLayout>
